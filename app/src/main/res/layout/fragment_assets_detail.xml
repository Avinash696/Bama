<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.AssetsDetail">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/assets_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Assets Name" />
        <LinearLayout
            android:id="@+id/ll_assetCode"
            android:layout_below="@id/assets_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Assets Code"
                android:id="@+id/assets_code"/>
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/iv_codeScan"
                android:background="@drawable/ic_baseline_qr_code_scanner_24"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_picker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_assetCode"
            android:layout_centerInParent="true"
            android:layout_marginTop="250dp"
            android:background="@drawable/common_full_open_on_phone" />
    </RelativeLayout>

</FrameLayout>