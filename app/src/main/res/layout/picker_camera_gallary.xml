<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
   <RelativeLayout
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_centerInParent="true">

       <ImageView
           android:id="@+id/iv_camera_picker"
           android:layout_width="@dimen/picker_width"
           android:layout_height="@dimen/picker_height"
           android:background="@drawable/ic_baseline_camera_alt_24" />
       <ImageView
           android:layout_marginLeft="10dp"
           android:layout_width="@dimen/picker_width"
           android:layout_height="@dimen/picker_height"
           android:background="@drawable/ic_baseline_filter_24"
           android:id="@+id/iv_gallary_picker"
           android:layout_toRightOf="@+id/iv_camera_picker"/>

   </RelativeLayout>
</RelativeLayout>